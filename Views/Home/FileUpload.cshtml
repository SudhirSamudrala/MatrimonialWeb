@model MatrimonialWebsite.Models.FileUploadModel
@{
    Layout = null;
    ViewBag.Title = "FileUpload";
}

@*<h2>Upload Photo</h2>*@


<html>
<head>
    <title>Matrimonial Registration</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="https://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>
    <style type="text/css">
        .error {
            color: red;
        }
    </style>
</head>
<body style="background-image: url('../../matrimony-blog-img.jpg'); text-align: center;">
    @using (Html.BeginForm("FileUpload", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="login-page">
            <form class="form-horizontal" style="background-color:white">
                <link href="~/Content/css2.css" rel="stylesheet" />
                <fieldset>
                    <div id="legend">
                        <legend align="center" style="font-size: 35px;">Photo Upload</legend>
                    </div> 
                    <div class="form-group">
                        @Html.LabelFor(a => a.file, htmlAttributes: new { @class = "control-label" })
                        <label class="control-label" for="UploadPhoto" style="color: white;">Upload Photo</label>
                        <div class="controls">
                            @Html.EditorFor(a => a.file, new { htmlAttributes = new { @class = "input-xlarge", @type = "file" } })<br />
                            @Html.ValidationMessageFor(a => a.file, "", new { @class = "error" })
                        </div>
                    </div>
                    <div class="control-group">
                        <!-- Button -->
                        <div class="controls">
                            <input class="btn btn-success" id="submit" type="submit" value='register' name="register">
                        </div>
                    </div> 
                </fieldset>
            </form>
        </div>
    }
</body>
</html>

