@model MatrimonialWebsite.Models.RegistrationDetails
@{
    Layout = null;
    ViewBag.Title = "UserRegistration";
    if (ViewBag.Message != null)
    {
        <span style="text-align:center; font-size:25px;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@ViewBag.Message</span>
    }
}
<html>
<head>
    <title>Matrimonial Registration</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="https://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>
    <style type="text/css">
        .error {
            color: red;
        }
    </style>
</head>
<body style="background-image: url('../../matrimony-blog-img.jpg'); text-align: center;">
    @using (Html.BeginForm("UserRegistration", "Home", FormMethod.Post))
    {
        <div class="login-page">
            <form class="form-horizontal" style="background-color:white">
                <link href="~/Content/css2.css" rel="stylesheet" />
                <fieldset>
                    <div id="legend">
                        <legend align="center" style="font-size: 35px;">Register</legend>
                    </div>
                    <div class="control-group">
                        <!-- Fullname -->
                        <label class="control-label" for="fname" style="color: white;">Enter Full Name</label>
                        <div class="controls">
                            @Html.TextBoxFor(a => a.FullName, new { @class = "input-xlarge", @placeholder = "User Full Name" })<br />
                            @Html.ValidationMessageFor(a => a.FullName, "", new { @class = "error" })
                        </div>
                    </div>
                    <div class="control-group">
                        <!-- E-mail -->
                        <label class="control-label" for="email" style="color: white;">Enter Email</label>
                        <div class="controls">
                            @Html.TextBoxFor(a => a.EmailId, new { @class = "input-xlarge", @placeholder = "User Email" })<br />
                            @Html.ValidationMessageFor(a => a.EmailId, "", new { @class = "error" })
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="Age" style="color: white;">Age</label>
                        <div class="controls">
                            @Html.TextBoxFor(a => a.Age, new { @class = "input-xlarge", @placeholder = "Age", @onkeypress = "return /[0-9]/i.test(event.key)" })<br />
                            @Html.ValidationMessageFor(a => a.Age, "", new { @class = "error" })
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="Mobile" style="color: white;">Mobile</label>
                        <div class="controls">
                            @Html.TextBoxFor(a => a.mobile, new { @class = "input-xlarge", @placeholder = "Mobile" })<br />
                            @Html.ValidationMessageFor(a => a.mobile, "", new { @class = "error" })
                        </div>
                    </div>
                    <div class="control-group">
                        <!-- Button -->
                        <label class="control-label" for="Role" style="color: white;">Role</label>
                        <div class="controls">
                            <select class="input-xlarge" name="Role" id="Role">
                                <option value="User">User</option>
                                <option value="Admin">Admin</option>
                            </select>
                        </div>
                    </div>
                    <div class="control-group">
                        <!-- Password-->
                        <label class="control-label" for="Profession" style="color: white;">Profession</label>
                        <div class="controls">
                            @Html.TextBoxFor(a => a.Profession, new { @class = "input-xlarge", @placeholder = "Profession" })<br />
                            @Html.ValidationMessageFor(a => a.Profession, "", new { @class = "error" })
                        </div>
                    </div>
                    <div class="control-group">
                        <!-- Password-->
                        <label class="control-label" for="Hobbies" style="color: white;">Hobbies</label>
                        <div class="controls">
                            @Html.TextBoxFor(a => a.Hobbies, new { @class = "input-xlarge", @placeholder = "Hobbies" })<br />
                            @Html.ValidationMessageFor(a => a.Hobbies, "", new { @class = "error" })
                        </div>
                    </div>
                    <div class="control-group">
                        <!-- Password-->
                        <label class="control-label" for="Religion" style="color: white;">Religion</label>
                        <div class="controls">
                            @Html.TextBoxFor(a => a.Religion, new { @class = "input-xlarge", @placeholder = "Religion" })<br />
                            @Html.ValidationMessageFor(a => a.Religion, "", new { @class = "error" })
                        </div>
                    </div>
                    <div class="control-group">
                        <!-- Password-->
                        <label class="control-label" for="Native" style="color: white;">Native</label>
                        <div class="controls">
                            @Html.TextBoxFor(a => a.Native, new { @class = "input-xlarge", @placeholder = "Native" })<br />
                            @Html.ValidationMessageFor(a => a.Native, "", new { @class = "error" })
                        </div>
                    </div>
                    <div class="control-group">
                        <!-- Password-->
                        <label class="control-label" for="Height" style="color: white;">Height</label>
                        <div class="controls">
                            @Html.TextBoxFor(a => a.Height, new { @class = "input-xlarge", @placeholder = "Height in CM", @onkeypress = "return /[0-9]/i.test(event.key)" })<br />
                            @Html.ValidationMessageFor(a => a.Height, "", new { @class = "error" })
                        </div>
                    </div>
                    <div class="control-group">
                        <!-- Password-->
                        <label class="control-label" for="Weight" style="color: white;">Weight</label>
                        <div class="controls">
                            @Html.TextBoxFor(a => a.Weight, new { @class = "input-xlarge", @placeholder = "Weight", @onkeypress = "return /[0-9]/i.test(event.key)" })<br />
                            @Html.ValidationMessageFor(a => a.Weight, "", new { @class = "error" })
                        </div>
                    </div>
                    <div class="control-group">
                        <!-- Password-->
                        <label class="control-label" for="Gender" style="color: white;">Gender</label>
                        @*<div class="controls">
                                Html.TextBoxFor(a => a.Gender, new { @class = "input-xlarge", @placeholder = "Gender" })<br />
                                Html.ValidationMessageFor(a => a.Gender, "", new { @class = "error" })
                            </div>*@
                        <div class="controls">
                            <select class="input-xlarge" name="Gender" id="Gender">
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                        </div>
                    </div>
                    <div class="control-group">
                        <!-- Password-->
                        <label class="control-label" for="password" style="color: white;">Password</label>
                        <div class="controls">
                            @Html.PasswordFor(a => a.Password, new { @class = "input-xlarge", @placeholder = "Password" })<br />
                            @Html.ValidationMessageFor(a => a.Password, "", new { @class = "error" })
                        </div>
                    </div>
                    <div class="control-group">
                        <!-- Password-->
                        <label class="control-label" for="cpassword" style="color: white;">Enter Password</label>
                        <div class="controls">
                            @Html.PasswordFor(a => a.cpassword, new { @class = "input-xlarge", @placeholder = "Confirm Password" })<br />
                            @Html.ValidationMessageFor(a => a.cpassword, "", new { @class = "error" })
                        </div>
                    </div>

                    <div class="control-group">
                        <!-- Button -->
                        <div class="controls">
                            <input class="btn btn-success" id="submit" type="submit" value='register' name="register">
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="controls">
                            <p class="message">Already Registered? @Html.ActionLink("Login", "Login", "Home")</p>

                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    }
</body>
</html>